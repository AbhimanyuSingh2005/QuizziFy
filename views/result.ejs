<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quizzify | Result</title>
    <link rel="shortcut icon" href="/asset/img/logo2.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/result_style.css" />
  </head>

  <body>
    <nav>
      <img
        src="/asset/img/logo2.png"
        alt="logo"
        class="logo"
        height="500"
        width="500"
      />
      <ul class="navlist">
        <li><a href="/">Introduction</a></li>
        <li><a href="/pdfToQuiz">Make a Quiz</a></li>
        <!-- <li class="nav_contact"><a href="#contact_container">Join us</a></li> -->
      </ul>
    </nav>
    <div class="container" id="container">
      <section>
        <div class="score_container">
          <h2>OOHOO!</h2>
          <p>You have completed the quiz</p>
        </div>
        <span class="scorecard">
          <div class="outer">
            <div class="inner">
              <h1><span id="score" class="score"><%= score %></span>/10</h1>
            </div>
          </div>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            versions="1.1"
            width="160"
            height="160"
          >
            <defs>
              <linearGradient id="GradientColor">
                <stop offset="0%" stop-color="#DA22FF" />
                <stop offset="100%" stop-color="#9733EE" />
              </linearGradient>
            </defs>
            <circle cx="80" cy="80" r="70" stroke-linecap="round" />
          </svg>
        </span>
        <span id="result"></span>
      </section>
      <section>
        <div class="leaderboard_container">
          <h2><u>LeaderBoard</u></h2>
          <div class="leaderboard">
            <div class="heading">
              <div>Rank</div>
              <div>Name</div>
              <div>Score</div>
            </div>
            <div class="leaderboard_content">
              <% leaderboard.forEach((user, index) => { %>
              <div class="rank"><%= index + 1 %></div>
              <div class="name"><%= user.name %></div>
              <div class="score"><%= user.score %></div>
              <% }) %>
            </div>
          </div>
        </div>
      </section>
    </div>
    <script src="/js/result.js"></script>
  </body>
</html>
